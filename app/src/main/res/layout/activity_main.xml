<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/title_bar1"
        layout="@layout/titlebar"
        tools:layout_editor_absoluteX="-38dp"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:layout_width="307dp"
        android:layout_height="486dp"
        android:background="@drawable/music_icon_plus"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/title_bar1"
        app:layout_constraintStart_toStartOf="@+id/title_bar1"
        app:layout_constraintTop_toTopOf="@+id/title_bar1"
        app:layout_constraintVertical_bias="0.744" />

    <Button
        android:id="@+id/button"
        android:layout_width="256dp"
        android:layout_height="62dp"
        android:background="@drawable/btn_start_style"
        android:text="扫描本地音乐"
        android:textColor="@color/white"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_bar1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />
</androidx.constraintlayout.widget.ConstraintLayout>